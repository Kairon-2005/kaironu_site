        animation: beacon-rotate 40s linear infinite;
      }
      @keyframes beacon-rotate {
        0% { transform: rotate(0deg); }
        100% { transform: rotate(360deg); }
      }

      /* Layer base */
      .layer {
        position: absolute;
        inset: 0;
        opacity: 0;
        pointer-events: none;
        transition: opacity 0.1s ease;
      }
