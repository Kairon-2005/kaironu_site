      body.layer-3 .bloom-2 { opacity: 1; }
      body.layer-4 .bloom-3 { opacity: 1; }
      body.layer-5 .bloom-1 { opacity: 0.7; }
      body.transitioning .bloom-orb { opacity: 0.3; transform: scale(1.5); }

