      .bloom-orb {
        position: absolute;
        border-radius: 50%;
        filter: blur(100px);
        opacity: 0;
        transition: opacity 1.5s ease, transform 3s ease;
      }
      .bloom-1 {
        width: 500px; height: 500px;
        background: radial-gradient(circle, rgba(245,242,234,0.08) 0%, transparent 70%);
        top: 20%; left: 10%;
      }
