---
import '../styles/global.css';
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />
    <title>Message</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Cormorant+Garamond:ital,wght@0,300;0,400;0,500;1,300;1,400&display=swap" rel="stylesheet">
  </head>
  <body class="bg-black text-white min-h-screen">
    <div class="container mx-auto px-8 py-16 max-w-2xl">
      <!-- Header -->
      <div class="mb-12">
        <a href="/" class="inline-block mb-8 text-[#F5F2EA] hover:text-white transition-colors duration-300 text-lg">
          ← Home
        </a>
        <h1 class="text-4xl font-light text-[#F5F2EA] font-serif italic mb-4">Message</h1>
      </div>

      <!-- Form -->
      <form id="messageForm" class="space-y-8">
        <!-- Nickname field -->
        <div class="space-y-3">
          <label for="nickname" class="block text-[#F5F2EA] text-sm">Name (optional)</label>
          <input type="text" id="nickname" name="nickname" 
                 class="w-full bg-transparent border border-[#F5F2EA] rounded px-4 py-3 text-[#F5F2EA] placeholder-gray-500 focus:outline-none focus:border-white transition-colors duration-300"
                 placeholder="Leave blank to be anonymous">
        </div>

        <!-- Message type selector -->
        <div class="space-y-3">
          <label class="block text-[#F5F2EA] text-sm">Message Type</label>
          <div class="space-y-2">
            <label class="flex items-center space-x-3 cursor-pointer">
              <input type="radio" name="type" value="public" class="w-4 h-4 border border-[#F5F2EA] bg-transparent">
              <span class="text-[#F5F2EA]">Public letter</span>
              <span class="text-[#F5F2EA]/60 text-sm ml-2">(reply will be published on site)</span>
            </label>
            <label class="flex items-center space-x-3 cursor-pointer">
              <input type="radio" name="type" value="treehole" checked class="w-4 h-4 border border-[#F5F2EA] bg-transparent">
              <span class="text-[#F5F2EA]">Treehole</span>
              <span class="text-[#F5F2EA]/60 text-sm ml-2">(no reply, just store)</span>
            </label>
            <label class="flex items-center space-x-3 cursor-pointer">
              <input type="radio" name="type" value="private" class="w-4 h-4 border border-[#F5F2EA] bg-transparent">
              <span class="text-[#F5F2EA]">Private reply</span>
              <span class="text-[#F5F2EA]/60 text-sm ml-2">(you want a private reply)</span>
            </label>
          </div>
        </div>

        <!-- Reply options (shown only for private messages) -->
        <div id="replyOptions" class="space-y-3 hidden">
          <label class="block text-[#F5F2EA] text-sm">How would you like to receive your reply?</label>
          <div class="space-y-2">
            <label class="flex items-center space-x-3 cursor-pointer">
              <input type="radio" name="replyPreference" value="key" checked class="w-4 h-4 border border-[#F5F2EA] bg-transparent">
              <span class="text-[#F5F2EA]">Key-based retrieval</span>
              <span class="text-[#F5F2EA]/60 text-sm ml-2">(you'll get a key to check back later)</span>
            </label>
            <label class="flex items-center space-x-3 cursor-pointer">
              <input type="radio" name="replyPreference" value="email" class="w-4 h-4 border border-[#F5F2EA] bg-transparent">
              <span class="text-[#F5F2EA]">Email notification</span>
              <span class="text-[#F5F2EA]/60 text-sm ml-2">(provide email below)</span>
            </label>
          </div>
        </div>

        <!-- Email field (shown only when email option is selected) -->
        <div id="emailField" class="space-y-3 hidden">
          <label for="email" class="block text-[#F5F2EA] text-sm">Email Address</label>
          <input type="email" id="email" name="email" 
                 class="w-full bg-transparent border border-[#F5F2EA] rounded px-4 py-3 text-[#F5F2EA] placeholder-gray-500 focus:outline-none focus:border-white transition-colors duration-300"
                 placeholder="your@email.com">
        </div>

        <!-- Message body -->
        <div class="space-y-3">
          <label for="body" class="block text-[#F5F2EA] text-sm">Message</label>
          <textarea id="body" name="body" rows="8" required
                    class="w-full bg-transparent border border-[#F5F2EA] rounded px-4 py-3 text-[#F5F2EA] placeholder-gray-500 focus:outline-none focus:border-white transition-colors duration-300 resize-vertical"
                    placeholder="Your message..."></textarea>
        </div>

        <!-- Submit -->
        <button type="submit" id="submitBtn"
                class="w-full bg-transparent border border-[#F5F2EA] text-[#F5F2EA] px-6 py-4 rounded hover:bg-[#F5F2EA] hover:text-black transition-all duration-300 font-serif italic text-lg">
          Send
        </button>

        <!-- Error display -->
        <div id="error" class="hidden text-red-400 text-sm"></div>
      </form>
    </div>

    <style>
      /* Custom radio button styling */
      input[type="radio"] {
        appearance: none;
        border-radius: 50%;
      }
      input[type="radio"]:checked {
        background-color: #F5F2EA;
      }
      input[type="radio"]:checked::before {
        content: '';
        display: block;
        width: 6px;
        height: 6px;
        border-radius: 50%;
        background-color: #000;
        margin: 1px auto;
      }

      /* Custom checkbox styling */
      input[type="checkbox"] {
        appearance: none;
      }
      input[type="checkbox"]:checked {
        background-color: #F5F2EA;
        position: relative;
      }
      input[type="checkbox"]:checked::before {
        content: '✓';
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        display: flex;
        align-items: center;
        justify-content: center;
        color: #000;
        font-size: 12px;
      }
    </style>

    <script>
      // DOM elements
      const form = document.getElementById('messageForm');
      const submitBtn = document.getElementById('submitBtn');
      const error = document.getElementById('error');
      const typeInputs = document.querySelectorAll('input[name="type"]');
      const replyOptions = document.getElementById('replyOptions');
      const replyPreferenceInputs = document.querySelectorAll('input[name="replyPreference"]');
      const emailField = document.getElementById('emailField');
      const emailInput = document.getElementById('email');

      // Toggle reply options based on message type
      function updateReplyOptions() {
        const selectedType = document.querySelector('input[name="type"]:checked').value;
        
        if (selectedType === 'private') {
          replyOptions.classList.remove('hidden');
          updateEmailField();
        } else {
          replyOptions.classList.add('hidden');
          emailField.classList.add('hidden');
          emailInput.required = false;
        }
      }

      // Toggle email field based on reply preference
      function updateEmailField() {
        const selectedPref = document.querySelector('input[name="replyPreference"]:checked')?.value;
        
        if (selectedPref === 'email') {
          emailField.classList.remove('hidden');
          emailInput.required = true;
        } else {
          emailField.classList.add('hidden');
          emailInput.required = false;
        }
      }

      // Event listeners for dynamic UI
      typeInputs.forEach(input => {
        input.addEventListener('change', updateReplyOptions);
      });

      replyPreferenceInputs.forEach(input => {
        input.addEventListener('change', updateEmailField);
      });

      // Initialize UI state
      updateReplyOptions();

      // Form submission
      form.addEventListener('submit', async (e) => {
        e.preventDefault();
        
        submitBtn.disabled = true;
        submitBtn.textContent = 'Sending...';
        error.classList.add('hidden');

        const formData = new FormData(form);
        const selectedType = document.querySelector('input[name="type"]:checked').value;
        
        const data = {
          nickname: formData.get('nickname') || null,
          type: selectedType,
          body: formData.get('body')
        };

        // Add reply preferences for private messages
        if (selectedType === 'private') {
          const replyPref = document.querySelector('input[name="replyPreference"]:checked').value;
          data.replyPreference = replyPref;
          
          if (replyPref === 'email') {
            data.email = formData.get('email');
          }
        } else {
          data.replyPreference = 'none';
        }

        try {
          const response = await fetch('/api/message', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify(data)
          });

          const result = await response.json();

          if (result.ok) {
            if (result.key) {
              // Redirect to key display page
              window.location.href = `/message/key/${result.id}?k=${encodeURIComponent(result.key)}`;
            } else {
              // Redirect to sent confirmation
              window.location.href = '/message/sent';
            }
          } else {
            throw new Error(result.error || 'Failed to send message');
          }
        } catch (err) {
          error.textContent = err.message;
          error.classList.remove('hidden');
          submitBtn.disabled = false;
          submitBtn.textContent = 'Send';
        }
      });
    </script>
  </body>
</html>
